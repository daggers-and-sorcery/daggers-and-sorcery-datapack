<?xml version="1.0" encoding="UTF-8"?>

<spell:spell xmlns:spell="http://www.swordsandsorcery.com/spell"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.swordsandsorcery.com/spell ../schema.xsd">
    <spell:id>1</spell:id>
    <spell:name>Heal</spell:name>
    <spell:spell-target>SELF</spell:spell-target>
    <spell:type>RESTORATION</spell:type>
    <spell:description>
        Heal you for 4 plus the level of your Restoration skill divided by two (this bonus is limited to of five extra point) health.
    </spell:description>
    <spell:combat-spell>true</spell:combat-spell>
    <spell:cost-list>
        <spell:cost>
            <spell:cost-type>MANA</spell:cost-type>
            <spell:cost-amount>3</spell:cost-amount>
        </spell:cost>
    </spell:cost-list>
    <spell:effect-list>
        <spell:effect target="com.morethanheroic.swords.combat.domain.effect.entry.spell.HealSpellEffectDefinition">
            <spell:settings-list>
                <spell:effect-setting>
                    <spell:setting-name>amount</spell:setting-name>
                    <spell:setting-value>4</spell:setting-value>
                </spell:effect-setting>
                <spell:effect-setting>
                    <spell:setting-name>xp</spell:setting-name>
                    <spell:setting-value>15</spell:setting-value>
                </spell:effect-setting>
            </spell:settings-list>
        </spell:effect>
    </spell:effect-list>
</spell:spell>