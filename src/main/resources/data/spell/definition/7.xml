<?xml version="1.0" encoding="UTF-8"?>

<spell:spell xmlns:spell="http://www.swordsandsorcery.com/spell"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.swordsandsorcery.com/spell ../schema.xsd">
    <spell:id>7</spell:id>
    <spell:name>Troll's vitality</spell:name>
    <spell:spell-target>SELF</spell:spell-target>
    <spell:description>
        You gain a buff that lasts for 3 hours and give +2 health regeneration.
    </spell:description>
    <spell:type>ALTERATION</spell:type>
    <spell:combat-spell>false</spell:combat-spell>
    <spell:cost-list>
        <spell:cost>
            <spell:cost-type>MANA</spell:cost-type>
            <spell:cost-amount>10</spell:cost-amount>
        </spell:cost>
    </spell:cost-list>
    <spell:effect-list>
        <spell:effect target="give_status_effect">
            <spell:settings-list>
                <spell:effect-setting>
                    <spell:setting-name>status-effect-id</spell:setting-name>
                    <spell:setting-value>1</spell:setting-value>
                </spell:effect-setting>
                <spell:effect-setting>
                    <spell:setting-name>expiration-time-in-seconds</spell:setting-name>
                    <spell:setting-value>10800</spell:setting-value>
                </spell:effect-setting>
            </spell:settings-list>
        </spell:effect>
    </spell:effect-list>
</spell:spell>