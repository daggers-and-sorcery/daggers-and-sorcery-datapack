<?xml version="1.0" encoding="UTF-8"?>

<spell:spell xmlns:spell="http://www.swordsandsorcery.com/spell"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.swordsandsorcery.com/spell ../schema.xsd">
    <spell:id>9</spell:id>
    <spell:name>Might</spell:name>
    <spell:spell-target>SELF</spell:spell-target>
    <spell:description>
        You gain a buff that lasts for 1 hour and gives 10% of your willpower as bonus to your melee attack and melee
        damage and 15% of your willpower as bonus to your defense.
    </spell:description>
    <spell:type>ALTERATION</spell:type>
    <spell:combat-spell>false</spell:combat-spell>
    <spell:cost-list>
        <spell:cost>
            <spell:cost-type>MANA</spell:cost-type>
            <spell:cost-amount>8</spell:cost-amount>
        </spell:cost>
    </spell:cost-list>
    <spell:effect-list>
        <spell:effect target="might">
            <spell:settings-list>
                <spell:effect-setting>
                    <spell:setting-name>expiration-time-in-seconds</spell:setting-name>
                    <spell:setting-value>3600</spell:setting-value>
                </spell:effect-setting>
            </spell:settings-list>
        </spell:effect>
    </spell:effect-list>
</spell:spell>