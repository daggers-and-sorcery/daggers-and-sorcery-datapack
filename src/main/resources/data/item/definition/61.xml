<?xml version="1.0" encoding="UTF-8"?>

<item:item xmlns:item="http://www.swordsandsorcery.com/item" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.swordsandsorcery.com/item ../schema.xsd">
    <item:id>61</item:id>
    <item:name>Apple cider</item:name>
    <item:type>LIQUID</item:type>
    <item:weight>30</item:weight>
    <item:usable>true</item:usable>
    <item:description>Restore 4 health points when used.</item:description>
    <item:use-effect-list>
        <item:effect target="restore_health">
            <item:settings-list>
                <item:effect-setting>
                    <item:setting-name>amount</item:setting-name>
                    <item:setting-value>4</item:setting-value>
                </item:effect-setting>
            </item:settings-list>
        </item:effect>
        <item:effect target="remove_item">
            <item:settings-list>
                <item:effect-setting>
                    <item:setting-name>item</item:setting-name>
                    <item:setting-value>61</item:setting-value>
                </item:effect-setting>
                <item:effect-setting>
                    <item:setting-name>amount</item:setting-name>
                    <item:setting-value>1</item:setting-value>
                </item:effect-setting>
            </item:settings-list>
        </item:effect>
        <!-- TODO: add it a buff when buffs are supported in the game -->
    </item:use-effect-list>
    <item:price>
        <item:price-entry>
            <item:type>MONEY</item:type>
            <item:amount>5</item:amount>
        </item:price-entry>
    </item:price>
</item:item>